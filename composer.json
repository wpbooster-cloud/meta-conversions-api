{
    "name": "wpbooster/meta-conversions-api",
    "description": "WordPress plugin for Facebook (Meta) Conversions API integration",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "WP Booster"
        }
    ],
    "require": {
        "php": ">=8.0",
        "composer/installers": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "MetaConversionsAPI\\": "includes/"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=WordPress includes/",
        "phpcbf": "phpcbf --standard=WordPress includes/"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}

